@model CatBlog.Models.Post

<style>
    .post-form-container {
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #1c1c1c;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.7);
        color: #e0e0e0;
    }

        .post-form-container h2 {
            text-align: center;
            color: #00d4ff;
            margin-bottom: 2rem;
            font-size: 1.8rem;
            letter-spacing: 1px;
        }

        .post-form-container label {
            font-weight: bold;
            margin-bottom: 0.3rem;
        }

        .post-form-container .form-control {
            background-color: #2a2a2a;
            color: #e0e0e0;
            border: 1px solid #444;
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

            .post-form-container .form-control:focus {
                background-color: #333;
                border-color: #00d4ff;
                color: #e0e0e0;
                box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
            }

        .post-form-container .btn-primary {
            background-color: #00d4ff;
            border-color: #00aacc;
            color: #121212;
            font-weight: bold;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            margin-right: 0.5rem;
            transition: all 0.3s ease;
        }

            .post-form-container .btn-primary:hover {
                background-color: #33e5ff;
                border-color: #00ccee;
                color: #121212;
                transform: scale(1.03);
            }

        .post-form-container .btn-secondary {
            background-color: #555;
            border-color: #444;
            color: #e0e0e0;
            font-weight: bold;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .post-form-container .btn-secondary:hover {
                background-color: #666;
                border-color: #555;
                color: #ffffff;
                transform: scale(1.03);
            }

        .post-form-container .text-danger {
            display: block;
            margin-top: -0.5rem;
            margin-bottom: 0.5rem;
            text-align: left;
            font-size: 0.875rem;
        }
</style>

<div class="post-form-container">
    <h2>@(Model.Id == 0 ? "Add New Post" : "Edit Post")</h2>

    <form asp-action="@((Model.Id == 0) ? "Create" : "Edit")" method="post">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Content</label>
            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

